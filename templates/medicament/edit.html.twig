{# templates/medicament/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Medicament{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Edit Medicament</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation', 'enctype': 'multipart/form-data', 'onsubmit': 'this.classList.add("was-validated")'}}) }}
    
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="form-group">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter medicament name'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Enter price'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.prix) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.qte_stock, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.qte_stock, {'attr': {'class': 'form-control', 'placeholder': 'Enter stock quantity'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.qte_stock) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.photo, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.photo) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.type_med, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type_med, {'attr': {'class': 'form-control', 'placeholder': 'Enter type of medicament'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.type_med) }}
                </div>
            </div>

            <div class="form-group form-check">
                {{ form_widget(form.sur_ordonnance, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.sur_ordonnance, null, {'label_attr': {'class': 'form-check-label'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.sur_ordonnance) }}
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('medicament_index') }}" class="btn btn-secondary">Back to list</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
</div>

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }
    .form-label {
        font-weight: bold;
    }
    .invalid-feedback {
        display: block;
    }
    .form-check {
        margin-bottom: 1.5rem;
    }
    .form-check-input {
        margin-right: 0.5rem;
    }
   
    body {
        background-color: #f8f9fa; /* Light gray background */
    }
    .form-group {
        margin-bottom: 1.5rem;
    }
    .form-label {
        font-weight: bold;
    }
    .invalid-feedback {
        display: block;
    }

    .form-check {
        margin-bottom: 1.5rem;
    }
    .form-check-input {
        margin-right: 0.5rem;
    }
  
    
</style>
{% endblock %}

{% block navbar %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('medicament_index') }}">Medicament List</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('medicament_index') }}">Home</a>
            </li>
        </ul>
    </div>
</nav>
{% endblock %}