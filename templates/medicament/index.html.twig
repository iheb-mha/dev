{% extends 'base.html.twig' %}{% block body %}    <div class="container mt-5">        <h1 class="mb-4">Medicament</h1>        <div class="card p-4 shadow-lg rounded">        <table class="table table-striped table-bordered">            <thead >                <tr>                    <th>Photo</th>                    <th>Nom</th>                    <th>Prix</th>                    <th>Qte Stock</th>                    <th>Sur Ordonnance</th>                    <th>Type Med</th>                    <th>Actions</th>                </tr>            </thead>            <tbody>                {% for medicament in medicaments %}                    <tr>                        <td>                            {% if medicament.photo %}                                <img src="{{ asset('uploads/photos/' ~ medicament.photo) }}" alt="Medicament Photo" width="100" />                            {% else %}                                No photo available.                            {% endif %}                        </td>                        <td>{{ medicament.nom }}</td>                        <td>{{ medicament.prix }}</td>                        <td>{{ medicament.qteStock }}</td>                        <td>{{ medicament.surOrdonnance ? 'Yes' : 'No' }}</td>                        <td>{{ medicament.TypeMed }}</td>                        <td>                            <a href="{{ path('medicament_edit', {'id': medicament.id}) }}" class="btn btn-secondary btn-sm">Edit</a>                            <form method="post" action="{{ path('medicament_delete', {'id': medicament.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this item?');">                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medicament.id) }}">                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>                            </form>                        </td>                    </tr>                {% endfor %}            </tbody>        </table>        </div>        <a href="{{ path('medicament_new') }}" class="btn btn-success mt-3">Create new</a>    </div>{% endblock %}