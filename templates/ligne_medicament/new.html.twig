{% extends 'base.html.twig' %}

{% block body %}


    <div class="container mt-5">
        <h1>New Ligne Medicament</h1>
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {
                    'attr': {
                        'class': 'form-horizontal',
                        'id': 'new-ligne-medicament-form'
                    }
                }) }}
                    <div class="form-group row">
                        <label
                            for="{{ form.medicament.vars.id }}"
                            class="col-sm-2 col-form-label font-weight-bold"
                        >
                            {{ form_label(form.medicament) }}
                        </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.medicament, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.medicament) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label
                            for="{{ form.numLigne.vars.id }}"
                            class="col-sm-2 col-form-label font-weight-bold"
                        >
                            {{ form_label(form.numLigne) }}
                        </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.numLigne, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.numLigne) }}
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
            <div class="card-footer text-right">
                <button
                    form="new-ligne-medicament-form"
                    type="submit"
                    class="btn btn-primary"
                >
                    Save
                </button>
                <a
                    href="{{ path('ligne_medicament_index') }}"
                    class="btn btn-secondary ml-2"
                >
                    Back to list
                </a>
            </div>
        </div>
    </div>
{% endblock %}
