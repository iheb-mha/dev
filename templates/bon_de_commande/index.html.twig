{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Bon De Commande</h1>
        <div class="card p-4 shadow-lg rounded">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>date</th>
                        <th>status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for bon_de_commande in bon_de_commandes %}
                    <tr>
                        <td>{{ bon_de_commande.date|date('Y-m-d') }}</td>
                        <td>{{ bon_de_commande.status }}</td>
                        <td>
                            {# Supprimer ou commenter cette ligne pour enlever le bouton "Show" #}
                            {# <a href="{{ path('app_bon_de_commande_show', {'id': bon_de_commande.id}) }}" class="btn btn-primary btn-sm me-0">Show</a> #}
                            <a href="{{ path('app_bon_de_commande_edit', {'id': bon_de_commande.id}) }}" class="btn btn-secondary btn-sm me-0">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_bon_de_commande_new') }}" class="btn btn-success mt-2">Create New</a>
    </div>
{% endblock %}
